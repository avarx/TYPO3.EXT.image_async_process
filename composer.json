{
    "name": "r3h6/image-async-process",
    "type": "typo3-cms-extension",
    "description": "Shows content elements with an invalid colPos.",
    "homepage": "https://github.com/r3h6",
    "require": {
        "typo3/cms": "^7.6.0 || 8.7.0"
    },
    "require-dev": {
        "namelesscoder/typo3-repository-client": "^1.2",
        "nimut/testing-framework": "^1.0",
        "mikey179/vfsStream": "^1.4",
        "phpunit/phpunit": "^4.7 || ^5.0",
        "typo3/testing-framework": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "R3H6\\ImageAsyncProcess\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "R3H6\\ImageAsyncProcess\\Tests\\": "Tests",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/",
            "TYPO3\\CMS\\Fluid\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/fluid/Tests/"
        }
    },
    "replace": {
        "image_async_process": "self.version",
        "typo3-ter/image-async-process": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/web/typo3conf/ext/",
            "[ -L .Build/web/typo3conf/ext/image_async_process ] || ln -snvf ../../../../. .Build/web/typo3conf/ext/image_async_process"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/web"
        }
    }
}
